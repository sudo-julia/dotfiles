## aliases
alias -- -='cd -'
alias ..='cd ..'
alias ....=' cd ../../'
alias :q='sudo -k && exit'
alias :wq='sudo -k && exit'
alias aliases='nvim ~/.zsh_aliases && . ~/.zsh_aliases'
alias btm='btm --color=gruvbox'
alias cht="cht.sh"
alias -- clear-pyc='find . -name "*.pyc" -exec rm -f {} \;'
alias di="nohup feh -. ~/documents/pictures/di.jpg > /dev/null 2>&1 & disown"
alias diff='diff --color=always'
# git aliases
alias finalize='git checkout main && git merge devel && git push'
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gcl='gh repo clone'
alias gcm='git commit -v'
alias gco='git checkout'
alias gd='git diff'
alias gds='git diff --staged'
alias gf='git fetch'
alias git='git'
alias gmd='git merge devel'
alias gpl='git pull'
alias gps='git push'
alias gr='git remote'
alias gst='git status'
# end git aliases
alias grep='grep --color=auto'
if hash exa > /dev/null; then
	alias l='exa -lg'
	alias la='exa -lag'
	alias ls='exa'
else
	alias l='ls -l'
	alias la='ls -al'
fi
alias ip='ip -c'
alias jrnl='note --note_dir "${HOME}/documents/personal/journal/" -f "txt"'
alias lsblk='lsblk -ip'
alias maim='maim -m 10'
alias mlvd='mullvad'
alias mpv='mpv --vo=gpu'
alias pactree='pactree -a'
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'
alias pdb='python3 -m pdb'
alias -- polybar-restart="${XDG_CONFIG_HOME}/polybar/scripts/launch.sh"
alias pstree='pstree -A'
alias pydoc='pydoc3'
alias p='python3'
alias rg='rg -p'
alias rm='rm -I'
alias sc='shellcheck --norc'
alias sudo='sudo '
alias tmp='mkdir -p /tmp/test && cd /tmp/test'
alias todo='rg -i "[#|/*|//|--] (TODO|FIXME|FIX|NOTE|WARNING|HACK)"'
alias u='sudo u && sudo -k'
alias -- update-mirrors='sudo reflector -a 2 -c us -f 15 -l 15 -n 15 -p https --save /etc/pacman.d/mirrorlist 2>/dev/null && sudo rm -f /etc/pacman.d/mirrorlist.pacnew && echo "Mirrors updated."'
alias wget='wget --hsts-file="${HOME}/lib/wget-hsts"'
alias ydl='youtube-dl -x --audio-format flac'
alias zshrc='nvim ~/.zshrc && . ~/.zshrc'
